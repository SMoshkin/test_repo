{
  "compilerOptions": {
    /* project options */
    "incremental": true,
    "target": "es2015",
    "module": "esnext",
    "jsx": "react-jsx",
    "outDir": "./.ts",

    /* module resolution */
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true,

    /* strict checks */
    "strict": true,
    "strictFunctionTypes": false,

    /* advanced */
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*",
    "./*.js"
  ]
}
